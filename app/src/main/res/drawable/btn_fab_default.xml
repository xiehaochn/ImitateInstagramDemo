<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <item android:bottom="0dp" android:top="2dp" android:left="2dp" android:right="2dp">
            <shape android:shape="oval">
                <solid android:color="@color/fab_color_shadow"></solid>
            </shape>
        </item>
        <item android:bottom="2dp" android:top="2dp" android:right="2dp" android:left="2dp">
            <shape android:shape="oval">
                <solid android:color="@color/colorAccent"></solid>
            </shape>
        </item>
    </layer-list>
</item>
    <item android:state_pressed="true">
        <shape android:bottom="2dp" android:top="2dp" android:right="2dp" android:left="2dp" android:shape="oval">
            <solid android:color="@color/fab_color_pressed"></solid>
        </shape>
    </item>
</selector>